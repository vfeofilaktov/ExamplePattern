<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/item_search_age_image_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/item_search_name_container_input_layout"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_marginBottom="4dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/item_search_name_container_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/keywords"
        app:layout_constraintLeft_toRightOf="@+id/item_search_age_image_b"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/item_search_name_edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawablePadding="16dp"
            android:lines="1" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>